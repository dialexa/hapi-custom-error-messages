{
  "name": "relish",
  "version": "3.0.0",
  "description": "Better error messages for Hapi.js Joi validation",
  "main": "index.js",
  "scripts": {
    "lint": "standard --verbose | snazzy",
    "test": "npm run lint && lab -r console -v -t 100 -a @hapi/code",
    "test-ci": "standard && lab -r lcov -t 100 -a @hapi/code | ./node_modules/.bin/coveralls",
    "test-cov-html": "lab -r html -o coverage.html",
    "generate-docs": "node generate-docs.js",
    "version": "npm run generate-docs && git add README.md API.md",
    "postversion": "git push && git push --tags"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "peerDependencies": {
    "@hapi/hapi": ">=18",
    "@hapi/joi": ">=15"
  },
  "author": "Dialexa",
  "contributors": [
    "Andrew Turner <andrew@dialexa.com>"
  ],
  "license": "ISC",
  "keywords": [
    "hapi",
    "joi",
    "error",
    "message",
    "error message",
    "validation",
    "custom error message",
    "better error message",
    "joi custom error message",
    "joi error messages",
    "relish"
  ],
  "repository": "git@github.com:dialexa/relish.git",
  "homepage": "https://github.com/dialexa/relish",
  "bugs": "https://github.com/dialexa/relish/issues",
  "dependencies": {
    "@hapi/hoek": "~8.2.4"
  },
  "devDependencies": {
    "@hapi/code": "~6.0.0",
    "coveralls": "~3.0.6",
    "@hapi/hapi": "~18.4.0",
    "@hapi/joi": "~16.0.1",
    "@hapi/lab": "~20.2.2",
    "markdown-toc": "~1.2.0",
    "snazzy": "~8.0.0",
    "standard": "~14.3.0"
  }
}
